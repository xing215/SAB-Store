# SAB Lanyard Environment Configuration Example
# Copy this file to .env and update with your actual values

# Timezone
TZ=Asia/Ho_Chi_Minh

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=minipreorder
MONGODB_PORT=27017

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_BUCKET_NAME=sablanyard
MINIO_USE_SSL=false

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=5000
BACKEND_URL=http://localhost:5000
MONGODB_URI=mongodb://admin:password123@mongodb:27017/minipreorder?authSource=admin
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_EMAIL=sab@fit.hcmus.edu.vn
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
APPSCRIPT_URL=https://script.google.com/macros/s/your-script-id/exec
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000
REACT_APP_BANK_NAME_ID=your-bank-name-id-here
REACT_APP_ACCOUNT_NO=ACCOUNT_NUMBER
